<!-- app/Resources/views/base.html.twig -->
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />
        <title>{% block title %}Oscar Panczenko{% endblock %} - messages</title>
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        {% block stylesheets %}
            <link href='http://fonts.googleapis.com/css?family=Irish+Grover' rel='stylesheet' type='text/css'>
            <link href='http://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>
            <link href="{{ asset('css/screen.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" href="{{ asset('images/feather.ico') }}" />
    </head>
    <body>

        <section id="wrapper">
            <header id="header">
                <div class="top">
                    {% block navigation %}
                        <nav>
                            <ul class="navigation">
                                <li><a href="{{ path('my_web_site_admin') }}">Admin</a></li>
				                <li><a href="{{ path('my_web_site_login') }}">Login</a></li>
                            </ul>
                        </nav>
                    {% endblock %}
                </div>
            </header>

            <section id="front">
            <hgroup>
                <h2>{% block blog_tagline %}Welcome to my Demo Site.{% endblock %}</h3>
            </hgroup>
            </section>

            {% block content %}
            {% block body %}{% endblock %}
            {% block sidebar %}{% endblock %}
            {% endblock %}

            <div id="footer">
                {% block footer %}
                   Created by Oscar Hernandez
                {% endblock %}
            </div>
        </section>

        {% block javascripts %}{% endblock %}
    </body>
</html>
