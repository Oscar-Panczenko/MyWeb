{# src/MyWeb/SiteBundle/Resources/views/Page/admin.html.twig #}
{% extends 'MyWebSiteBundle::layout.html.twig' %}

{% block navigation %}
    <nav>
        <ul class="navigation">
            <li><a href="{{ path('my_web_site_homepage') }}">Home</a></li>
            <li><a href="{{ path('logout') }}">Logout</a></li>
        </ul>
    </nav>
{% endblock %}

{%  block content %}
    <section class="main-col">
        {% block body %}
            <section id="data">
                <table border="1px" style="width:700px">
                    <tr>
                        <th align="center" bgcolor="#CCC">Email</th>
                        <th align="center" bgcolor="#CCC">Body</th>
                    </tr>
                {% for item in object %}
                    <tr>
                        <td bgcolor="#ffffff">{{ item.email }}</td>
                        <td bgcolor="#ffffff">{{ item.body }}</td>
                    </tr>
                {% else %}
                    <h2>Aoutch ! No data !</h2>
                {% endfor %}
                </table>
            </section>
        {% endblock %}
    </section>
    <aside class="sidebar">
        {% block sidebar %}
            <div class="search">
                <h4>Search messages by Email</h4>
                <form action="" method="get">
                    <input type="text" name="keywords" id="search_keywords" />
                    <input type="submit" value="search" />
                    <div class="help">
                        Enter an email or just a part of it.
                    </div>
                </form>
            </div>
        {% endblock %}
    </aside>
{% endblock %}