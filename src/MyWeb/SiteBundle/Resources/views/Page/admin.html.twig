{# src/MyWeb/SiteBundle/Resources/views/Page/admin.html.twig #}
{% extends 'MyWebSiteBundle::layout.html.twig' %}

{% block navigation %}
    <nav>
        <ul class="navigation">
            <li><a href="{{ path('my_web_site_homepage') }}">Home</a></li>
            <li><a href="{{ path('my_web_site_admin') }}">Admin</a></li>
            <li><a href="{{ path('logout') }}">Logout</a></li>
        </ul>
    </nav>
{% endblock %}

{%  block content %}
    <section class="main-col">
        {% block body %}
            <section id="data">
                <table border="1" style="width:700px">
                    <tr>
                        <th align="center">Email</th>
                        <th align="center">Body</th>
                    </tr>
                {% for item in object %}
                    <tr>
                        <td>{{ item.email }}</td>
                        <td>{{ item.body }}</td>
                    </tr>
                {% else %}
                    <h2>Aoutch ! No data !</h2>
                {% endfor %}
                </table>
            </section>
        {% endblock %}
    </section>
    <aside class="sidebar">
        {% block sidebar %}Side Bar{% endblock %}
    </aside>
{% endblock %}